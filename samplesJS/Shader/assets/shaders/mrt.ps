// Multi render target example shader
input float2 inUV;
input float4 inColor;

// Textures and their's sampler state
Texture0 texture0
{
    filter = trilinear;
    repeat = clamp;
}

void main()
{
    float4 color0 = texture0(inUV);

    oColor0 = color0 * float4(1, 0, 0, 1);
    oColor1 = color0 * float4(0, 1, 0, 1);
    oColor2 = color0 * float4(0, 1, 1, 1);
    oColor3 = color0 * float4(1, 0, 1, 1);
}
